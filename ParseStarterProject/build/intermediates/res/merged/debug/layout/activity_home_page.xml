<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center|bottom"
    android:orientation="vertical"
    tools:context="tree.note2note.HomePageActivity"
    android:background="#ffffff">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/logo"
        android:adjustViewBounds="true"
        android:maxWidth="125dp"
        android:maxHeight="125dp"
        android:scaleType="fitCenter"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Note2Note"
        android:textSize="25dp"
        android:textColor="#800c0c"
        android:layout_marginBottom="90dp"/>




    <Button
        android:id="@+id/buttonSignIN"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Log in"
        android:onClick="goToLogInPage"
        android:textColor="#800c0c"
        android:layout_marginBottom="10dp"
        android:background="#ffffff" />

    <Button
        android:id="@+id/buttonSignUP"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Sign Up"
        android:onClick="goToSignUpPage"
        android:textColor="#800c0c"
        android:background="#ffffff"
        android:layout_marginBottom="20dp"/>





</LinearLayout><!-- From: file:/home/regina/Parse-Starter-Project-1.13.0/ParseStarterProject/src/main/res/layout/activity_home_page.xml -->